@using CleverWeb.Features.Auth.ViewModel
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center justify-content-center vh-100 bg-body-tertiary">
    <div class="card border-0 shadow-lg w-100 mx-3" style="max-width: 380px;">
        <div class="card-body p-4">
            <h3 class="text-center fw-bold mb-4 text-primary">Acesso ao Sistema</h3>

            <form method="post" class="needs-validation" novalidate>
                <div class="form-floating mb-3">
                    <input asp-for="UserName" class="form-control rounded-3" placeholder="Usuário" required />
                    <label asp-for="UserName"></label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Senha" type="password" class="form-control rounded-3" placeholder="Senha" required />
                    <label asp-for="Senha"></label>
                </div>

                <button class="btn btn-primary w-100 rounded-3 py-2 fw-semibold">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Entrar
                </button>
            </form>

            <div asp-validation-summary="ModelOnly" class="text-danger mt-3 text-center"></div>
        </div>
    </div>
</div>