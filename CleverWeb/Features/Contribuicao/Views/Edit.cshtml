@using System.Globalization
@model CleverWeb.Features.Contribuicao.ViewModels.ContribuicaoViewModel

@{
    ViewData["Title"] = @ViewBag.Membro;
}

<h2>@ViewBag.Membro</h2>

<form asp-action="Edit" asp-controller="Contribuicao" method="post">
    @Html.AntiForgeryToken()

    <!-- ID oculto (obrigatório para o POST) -->
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" name="MembroId" value="@ViewBag.MembroId" />
    <input type="hidden" asp-for="MembroId" />

    <div class="form-group mb-3">
        <label asp-for="TipoContribuicao" class="form-label"></label>
        <select asp-for="TipoContribuicao" class="form-select form-select-lg mb-3">
            <option value="1" selected>Dízimo</option>
            <option value="2">Oferta</option>
            <option value="3">Missão</option>
        </select>
        <span asp-validation-for="TipoContribuicao" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="FormaPagto" class="form-label"></label>
        <select asp-for="FormaPagto" class="form-select form-select-lg mb-3">
            <option value="1" selected>Pix</option>
            <option value="2">Dinheiro</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Valor" class="form-label"></label>
        <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DataPagamento" class="form-label"></label>
        <input asp-for="DataPagamento" class="form-control" type="date" />
        <span asp-validation-for="DataPagamento" class="text-danger"></span>
    </div>

    <div class="container-fluid d-flex justify-content-between align-items-center align-baseline">
        <a asp-action="MembroList" asp-controller="Contribuicao" class="btn btn-secondary me-2">Voltar</a>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
