@using System.Globalization
@model CleverWeb.Features.Despesa.ViewModels.DespesaViewModel

@{
    ViewData["Title"] = @ViewBag.Membro;
}

<h2>@ViewBag.Membro</h2>

<form asp-action="Create" asp-controller="Despesa" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" name="MembroId" value="@ViewBag.MembroId" />

    <div class="form-group mb-3">
        <label asp-for="FornecedorId" class="form-label"></label>
        <select asp-for="FornecedorId"
                asp-items="Model.FornecedorList"
                class="form-select form-select-lg mb-3">
            <option value="">escolha a despesa</option>
        </select>
        <span asp-validation-for="FornecedorId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label"></label>
        <input asp-for="Descricao" class="form-control" placeholder="Ref.: a pagto da energia eletrica" maxlength="35" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CaixaSaida" class="form-label"></label>
        <select asp-for="CaixaSaida" class="form-select form-select-lg mb-3">
            <option value="1" selected>Dízimo</option>
            <option value="2">Oferta</option>
        </select>
        <span asp-validation-for="CaixaSaida" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Valor" class="form-label"></label>
        <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DataPagamento" class="form-label"></label>
        <input asp-for="DataPagamento" class="form-control" type="date" />
        <span asp-validation-for="DataPagamento" class="text-danger"></span>
    </div>

    <div class="container-fluid d-flex justify-content-between align-items-center align-baseline">
        <a asp-action="Index" asp-controller="Despesa" class="btn btn-secondary me-2">Voltar</a>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
