<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Shekinah</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body class="bg-light d-flex flex-column min-vh-100">

    <!-- NAVBAR SUPERIOR -->
    <nav class="navbar navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Dashboard" asp-action="Index">
                <i class="bi bi-people-fill me-2"></i> SHEKINAH
            </a>
        </div>
    </nav>

    <!-- CONTEÚDO -->
    <main class="container py-4 flex-grow-1">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm text-center">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <!-- NAVBAR INFERIOR -->
    <nav class="navbar bg-white fixed-bottom shadow-sm border-top">
        <div class="container-fluid justify-content-around text-center">
            <a asp-controller="Dashboard" asp-action="Index" class="text-dark text-decoration-none">
                <i class="bi bi-house-fill fs-4"></i>
                <div class="small">Início</div>
            </a>
            <a asp-controller="Contribuicao" asp-action="MembroList" class="text-dark text-decoration-none">
                <i class="bi bi-cash-stack fs-4"></i>
                <div class="small">Contribuições</div>
            </a>
            <a asp-controller="Despesa" asp-action="Index" class="text-dark text-decoration-none">
                <i class="bi bi-upc-scan fs-4"></i>
                <div class="small">Despesas</div>
            </a>
            <a asp-controller="Home" asp-action="Index" class="text-dark text-decoration-none">
                <i class="bi bi-node-plus fs-4"></i>
                <div class="small">Mais</div>
            </a>
        </div>
    </nav>

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
        }

        main {
            padding-bottom: 80px; /* espaço para não ficar escondido atrás da navbar inferior */
        }

        .navbar.fixed-bottom i {
            font-size: 1.5rem;
        }

        .navbar.fixed-bottom div {
            font-size: 0.75rem;
        }

        .alert {
            border-radius: 12px;
        }
    </style>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>