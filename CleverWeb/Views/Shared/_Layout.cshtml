<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Shekinah</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body class="bg-light d-flex flex-column min-vh-100">

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Membro" asp-action="Index">
                <i class="bi bi-people-fill me-2"></i> SHEKINAH
            </a>
        </div>
    </nav>

    <!-- NAVBAR -->
    <nav class="navbar bg-light fixed-bottom shadow-sm">
        <div class="container-fluid justify-content-around text-center">
            <a asp-controller="Home" asp-action="Index" class="text-dark text-decoration-none">
                <i class="bi bi-house-fill fs-3"></i>
                <div>Início</div>
            </a>
            <a asp-controller="Contribuicao" asp-action="MembroList" class="text-dark text-decoration-none">
                <i class="bi bi-cash-stack fs-3"></i>
                <div>Contribuições</div>
            </a>
            <a href="#" class="text-dark text-decoration-none">
                <i class="bi bi-upc-scan fs-3"></i>
                <div>Despesas</div>
            </a>
            <a asp-controller="Membro" asp-action="Index" class="text-dark text-decoration-none">
                <i class="bi bi-people-fill fs-3"></i>
                <div>Membros</div>
            </a>
        </div>
    </nav>


    <!-- CONTEÚDO -->
    <main class="container-fluid py-4 flex-grow-1" style="min-height:100vh;">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex-grow: 1;
        }
    </style>
   

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>